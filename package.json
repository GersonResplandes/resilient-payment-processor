{
  "name": "resilient-payment-processor",
  "version": "1.0.0",
  "description": "A fault-tolerant Webhook Handler designed to ensure Idempotency and Data Consistency using Redis Distributed Locks and PostgreSQL Transactions. Prevents duplicate order processing under high concurrency.",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "build": "rimraf dist && tsc",
    "start": "node dist/src/app.js",
    "lint": "eslint src --ext .ts --fix",
    "test": "jest --detectOpenHandles --forceExit",
    "test:concurrency": "ts-node scripts/test-concurrency.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GersonResplandes/resilient-payment-processor.git"
